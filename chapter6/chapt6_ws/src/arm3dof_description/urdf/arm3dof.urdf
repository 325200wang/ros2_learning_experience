<?xml version="1.0"?>
<robot name="arm3dof">
  <!-- 材质定义（美观区分连杆） -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <!-- 1. 底座（固定） -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00333" ixy="0.0" ixz="0.0"
               iyy="0.00333" iyz="0.0"
               izz="0.00267"/>
    </inertial>
  </link>

  <!-- 2. 大臂 + 肩关节（绕Z轴旋转） -->
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/> <!-- 连杆中心偏移到末端，方便连接 -->
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="-0.15 0 0"/>
      <inertia ixx="0.000208" ixy="0.0" ixz="0.0"
               iyy="0.003854" iyz="0.0"
               izz="0.003854"/>
    </inertial>
  </link>
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.05"/> <!-- 关节在底座顶部中心 -->
    <axis xyz="0 0 1"/> <!-- 绕Z轴旋转（左右转头） -->
    <limit effort="1000" lower="-1.57" upper="1.57" velocity="0.5"/> <!-- ±90度 -->
  </joint>

  <!-- 3. 小臂 + 肘关节（绕Y轴旋转） -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="-0.15 0 0"/>
      <inertia ixx="0.000125" ixy="0.0" ixz="0.0"
               iyy="0.0023125" iyz="0.0"
               izz="0.0023125"/>
    </inertial>
  </link>
  <joint name="elbow_joint" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="-0.3 0 0"/> <!-- 关节在大臂末端 -->
    <axis xyz="0 1 0"/> <!-- 绕Y轴旋转（上下摆动） -->
    <limit effort="1000" lower="0" upper="2.35" velocity="0.5"/> <!-- 0~135度 -->
  </joint>

  <!-- 4. 末端 + 腕关节（绕Y轴旋转） -->
  <link name="link3">
    <visual>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.05 0.05"/>
      </geometry>
      <origin xyz="-0.15 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="-0.15 0 0"/>
      <inertia ixx="0.0000833" ixy="0.0" ixz="0.0"
               iyy="0.0015417" iyz="0.0"
               izz="0.0015417"/>
    </inertial>
  </link>
  <joint name="wrist_joint" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="-0.3 0 0"/> <!-- 关节在小臂末端 -->
    <axis xyz="0 1 0"/> <!-- 绕Y轴旋转 -->
    <limit effort="1000" lower="-1.57" upper="1.57" velocity="0.5"/> <!-- ±90度 -->
  </joint>
</robot>